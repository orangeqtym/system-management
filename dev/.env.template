# This file is a template for environment variables.
# Copy this to .env.dev and fill in the values.
# DO NOT commit the .env file with secrets to version control.

# Example for a database connection
# DATABASE_URL=postgres://user:password@db:5432/mydatabase

# Example for an inter-service URL
# EMAIL_SERVICE_URL=http://email-service:3000

# --- Variables for email-service ---
# Gmail account credentials
EMAIL_USER=your-email@gmail.com
EMAIL_APP_PASSWORD=your-gmail-app-password

# Recipient for notifications
BASE_RECIPIENT_EMAIL=your_base_email@example.com

# Optional: Rate limiting (emails per hour)
MAX_EMAILS_PER_HOUR=20
