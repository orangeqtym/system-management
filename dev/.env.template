# This file is a template for environment variables.
# Copy this to .env.dev and fill in the values.
# DO NOT commit the .env file with secrets to version control.

# Example for a database connection
# DATABASE_URL=postgres://user:password@db:5432/mydatabase

# Example for an inter-service URL
# EMAIL_SERVICE_URL=http://email-service:3000

# --- Variables for email-service ---
# Gmail account credentials
EMAIL_USER=your-email@gmail.com
EMAIL_APP_PASSWORD=your-gmail-app-password

# Recipient for notifications
RECIPIENT_EMAIL=your-email@gmail.com

# Optional: Rate limiting (emails per hour)
MAX_EMAILS_PER_HOUR=20

# Database configuration
DB_PASSWORD=your-secure-database-password
DATABASE_URL=postgres://app_user:${DB_PASSWORD}@database:5432/system_db

# --- Variables for meal-planner-api ---
# Database connection (shared with system database)
MEAL_PLANNER_DB_HOST=database
MEAL_PLANNER_DB_PORT=5432
MEAL_PLANNER_DB_NAME=system_db
MEAL_PLANNER_DB_USER=app_user
MEAL_PLANNER_DB_PASSWORD=${DB_PASSWORD}

# API Configuration
MEAL_PLANNER_PORT=3001
MEAL_PLANNER_CORS_ORIGIN=http://localhost:3000
MEAL_PLANNER_LOG_LEVEL=info
